{
    "name": "minicstudio/anaf-ubl",
    "description": "A modern object-oriented PHP library to create valid UBL files",
    "keywords": [
        "ubl",
        "invoice",
        "ublinvoice",
        "ubl invoice",
        "efff",
        "electronic invoice",
        "digital invoice",
        "xml",
        "xml invoice",
        "anaf",
        "electorinc transport"
    ],
    "homepage": "https://github.com/minicstudio/anaf-ubl",
    "license": "GNU",
    "authors": [
        {
            "name": "Levente Antal",
            "email": "antal.levente@minic.ro",
            "homepage": "https://minic.ro",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "sabre/xml": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "MinicStudio\\UBL\\": ["src"],
            "MinicStudio\\UBL\\Tests\\": ["tests"]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs -n --standard=phpcs.xml ./src/"
    }
}
